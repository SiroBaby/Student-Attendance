// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Bảng học sinh
model Student {
  id        String    @id @default(cuid())
  name      String    @db.VarChar(255)
  deletedAt DateTime? @map("deleted_at") // Soft delete
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  // Quan hệ với bảng điểm danh
  attendanceRecords AttendanceRecord[]

  @@map("students")
}

// Bảng điểm danh
model AttendanceRecord {
  id        String   @id @default(cuid())
  studentId String   @map("student_id")
  date      DateTime @db.Date
  isAbsent  Boolean  @default(false) @map("is_absent")
  dailyFee  Int      @map("daily_fee") // Lưu giá tiền tại thời điểm điểm danh
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Quan hệ với bảng học sinh
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  // Index và unique constraints
  @@unique([studentId, date], name: "unique_student_date")
  @@index([studentId])
  @@index([date])
  @@map("attendance_records")
}

// Bảng cấu hình ứng dụng
model AppSettings {
  id          String   @id @default(cuid())
  key         String   @unique @db.VarChar(100)
  value       String   @db.Text
  description String?  @db.VarChar(500)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("app_settings")
}